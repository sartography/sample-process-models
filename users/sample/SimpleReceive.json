{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "orderId": {
      "type": "string"
    },
    "customerName": {
      "type": "string"
    },
    "products": {
      "type": "string",
      "items": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "productName": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": ["productId", "productName", "quantity"]
      }
    },
    "shippingAddress": {
      "type": "string",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        }
      },
      "required": ["street", "city", "state", "postalCode"]
    }
  },
  "required": ["orderId", "customerName", "products", "shippingAddress"]
}
