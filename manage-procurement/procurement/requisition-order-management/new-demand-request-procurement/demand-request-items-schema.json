    "properties": {
    "tasks": {
      "type": "array",
      "title": "Items",
      "items": {
        "type": "object",
        "required": [
          "item",
  		"qty",
	  	"unit-price"
        ],
        "properties": {
          "item": {
            "type": "string",
            "title": "Item",
            "description": "Name of item to be purchased"
          },
          "qty": {
            "type": "number",
            "title": "Qty",
            "description": "Number of items"
          },
          "unit-price": {
            "type": "number",
            "title": "Unit Price"
          }
        }
      }
    }
  }
}